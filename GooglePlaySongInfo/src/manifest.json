{
  "manifest_version": 2,
  "name": "Google Play Music - currently playing",
  "version": "1.0",
  "description": "Extracts the currently playing Song and Artist info from Google Play Music",
  "browser_action": {
    "default_title": "Google Play currently playing"
  },
   "content_scripts": [
    {
      "matches": ["https://play.google.com/music/*"],
      "js": ["content.js"],
	  "css": ["content.css"],
	  "all_frames": true
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
	"activeTab"
  ]
}
